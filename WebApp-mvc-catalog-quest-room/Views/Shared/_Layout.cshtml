                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Rooms", "About", "Home")</li>
                    <li>@Html.ActionLink("Book Now", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQs & Parking", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Groups", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                </ul>
            </div>
